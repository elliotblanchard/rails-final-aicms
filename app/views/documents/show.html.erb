<p class="title is-5"><%= @document.name %></p>

<div class="columns">
    <div class="column">
        <p class="subtitle is-6">
            <label class="has-text-weight-semibold">Generated by:</label>
            <% if admin? %> 
                <%= link_to @document.generator.name, generator_path(@document.generator) %>
            <% else %>
                <%= @document.generator.name %>
            <% end %>
            <br>
            <label class="has-text-weight-semibold">Length:</label> 
            <%= @document.length %> characters
            <br>
            <label class="has-text-weight-semibold">Prompt:</label> 
            <%= @document.prompt %>            
        </p>        
    </div>
    <div class="column">
        <p class="subtitle is-6">
            <label class="has-text-weight-semibold">Continuation:</label> 
            <%= @document.is_continuation %>
            <br>
            <label class="has-text-weight-semibold">Starts at beginning:</label>
            <%= @document.start_at_beginning %>
            <br>
            <label class="has-text-weight-semibold">Pause at end:</label>
            <%= @document.pause_at_end %>
            <br>
            <label class="has-text-weight-semibold">Top p:</label>
            <%= @document.top_p %>
            <br>
            <label class="has-text-weight-semibold">Temperature:</label>
            <%= @document.temperature %>
        </p>
    </div>
</div>
<p class="subtitle is-6">
    <label class="has-text-weight-semibold">Content:</label>
    <%= @document.generated_response %>
</p>
<p><%= button_to "Delete", @document, :method=>:delete, :class=>:destroy, class: 'button is-small is-danger' %></p>