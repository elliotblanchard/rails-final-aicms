<p class="title is-5"><%= @generator.name %></p>

<div class="columns">
    <div class="column">
        <p class="subtitle is-6">
            <label class="has-text-weight-semibold">API URL:</label> 
            <%= @generator.api_url %>
            <br>
            <label class="has-text-weight-semibold">Description:</label>  
            <%= @generator.description %>
            <br>
            <label class="has-text-weight-semibold">Associated Documents:</label>
        </p>
    </div>
</div>
<div class="columns">
    <div class="column">
            <ol class="is-size-6">
                <% @generator.documents.each do |document| %>
                    <li><%= link_to document.name, document_path(document) %></li>
                <% end %>
            </ol>
            <br>
            <p class="subtitle is-6">
                <span class="tag is-primary"><%= link_to "Edit Generator", edit_generator_path, :class=>"has-text-white" %></span>
            <% if @generator.documents.length == 0 %>
                <%= button_to "Delete Generator", @generator, :method=>:delete, :class=>:destroy, class: 'button is-small is-danger' %>
            <% end %>
            </p>
    </div>
</div>