<p class="title is-5">Login</p>

<% if flash[:message] %>
    <span class="tag is-warning is-medium"><%= flash[:message] %></span>
    <br>
    <br>
<% end %>    

<%= form_for :user do |f| %>
    <div class="field">    
        <%= f.label :username %>
        <div class="control">        
            <%= f.text_field :username, class: 'input', required:true %>
        </div> 
    </div> 
    <div class="field">
            <%= f.label :password %>
            <div class="control">            
                <%= f.password_field :password, class: 'input', required:true %>  
            </div> 
        </div> 
    <div class="field">            
    <div class="field">   
        <div class="control">    
            <%= f.submit "Login", class: 'button is-link' %>  
        </div>
    </div>   
<% end %>