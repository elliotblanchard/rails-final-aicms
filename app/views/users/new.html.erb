<p class="title is-5">Sign Up</p>

<%= render partial: "layouts/errors", locals: {object: @user} %>

<%= form_for(@user, url:'/signup') do |f| %>
    <div class="field">
        <%= f.label :username %>
        <div class="control"> 
                <%= f.text_field :username, class: 'input', required:true %>
        </div> 
    </div> 
    <div class="field">
        <%= f.label :password %>
        <div class="control"> 
                <%= f.password_field :password, class: 'input', required:true %>          
        </div> 
    </div> 
    <div class="field">     
        <div class="control"> 
            <label class="checkbox">
                <%= f.check_box :admin %>    
               Admin 
        </div> 
    </div> 
    <div class="field">   
        <div class="control">     
            <%= f.submit "Create User", class: 'button is-link' %> 
        </div> 
    </div>                   
<% end %>